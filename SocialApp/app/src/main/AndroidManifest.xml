<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.socialapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/login_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/login_logo"

        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".ui.activitys.ChatActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".ui.activitys.UserDetailActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".ui.activitys.AddPhotoActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".ui.activitys.RegisterActivity"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name=".ui.activitys.MainActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait" />


        <activity
            android:name=".ui.activitys.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>