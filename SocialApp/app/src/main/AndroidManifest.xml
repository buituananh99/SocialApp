<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.socialapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/login_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        android:usesCleartextTraffic="true">

        <activity android:name=".ui.activitys.ChatActivity"></activity>
        <activity android:name=".ui.activitys.UserDetailActivity" ></activity>
        <activity android:name=".ui.activitys.AddPhotoActivity" ></activity>
        <activity android:name=".ui.activitys.RegisterActivity" ></activity>

        <activity
            android:name=".ui.activitys.MainActivity"
            android:label="@string/title_activity_main" />


        <activity android:name=".ui.activitys.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>